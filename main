    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generador de Embeds Fluid Player</title>
    <script src="https://cdn.fluidplayer.com/v3/current/fluidplayer.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
        }
        input, textarea {
            width: 100%;
            margin-bottom: 10px;
            padding: 8px;
        }
        button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        .result {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Generador de Embeds Fluid Player</h1>
        <p>Introduce la URL del video y la URL del anuncio VAST para generar el embed.</p>
        <label for="videoUrl">URL del Video:</label>
        <input type="text" id="videoUrl" placeholder="https://example.com/video.mp4">
        
        <label for="vastUrl">URL del Anuncio VAST:</label>
        <input type="text" id="vastUrl" placeholder="https://example.com/vast.xml">
        
        <button onclick="generateEmbed()">Generar Embed</button>
        
        <div class="result" id="result"></div>
    </div>

    <script>
        function generateEmbed() {
            const videoUrl = document.getElementById('videoUrl').value;
            const vastUrl = document.getElementById('vastUrl').value;

            if (!videoUrl || !vastUrl) {
                alert('Por favor, introduce ambas URLs.');
                return;
            }

            const embedCode = `
            <iframe width="560" height="315" srcdoc="
            <video id='video-id' width='100%' height='100%' controls>
                <source src='${videoUrl}' type='video/mp4'>
            </video>
            <script src='https://cdn.fluidplayer.com/v3/current/fluidplayer.min.js'></script>
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    var player = fluidPlayer('video-id', {
                        vastOptions: {
                            adList: [{
                                roll: 'preRoll',
                                vastTag: '${vastUrl}'
                            }]
                        }
                    });
                });
            </script>
            " frameborder="0" allowfullscreen></iframe>`;

            document.getElementById('result').innerHTML = `
                <h2>CÃ³digo Embed:</h2>
                <textarea rows="10" readonly>${embedCode}</textarea>
            `;
        }
    </script>
</body>
</html>
